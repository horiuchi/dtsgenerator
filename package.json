{
  "name": "dtsgenerator",
  "version": "3.4.0",
  "description": "TypeScript d.ts file generator for JSON Schema file",
  "bin": {
    "dtsgen": "bin/dtsgen"
  },
  "main": "dist/core/",
  "typings": "dist/core/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig-build.json",
    "clean": "rimraf dist/ build/ {src,test}/**/*.{js,js.map} *.tsbuildinfo",
    "compile": "tsc -p .",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "do-test": "cross-env TS_NODE_FILES=true mocha --exit --require ts-node/register --colors test/*_test.ts",
    "lint:fix": "npm run lint -- --fix",
    "lint": "eslint --ext ts src/ test/",
    "precompile": "npm run lint",
    "prepublishOnly": "npm run build",
    "pretest": "npm run compile",
    "test:update-snapshot": "UPDATE_SNAPSHOT=1 npm run test",
    "test": "nyc npm run do-test",
    "watch": "npm run compile -- -w"
  },
  "directories": {
    "test": "test/"
  },
  "keywords": [
    "TypeScript",
    "JSON Schema",
    "OpenAPI"
  ],
  "author": "horiuchi",
  "license": "MIT",
  "homepage": "https://github.com/horiuchi/dtsgenerator",
  "repository": {
    "type": "git",
    "url": "git@github.com:horiuchi/dtsgenerator.git"
  },
  "bugs": {
    "url": "https://github.com/horiuchi/dtsgenerator/issues"
  },
  "engines": {
    "node": ">= 8.0"
  },
  "dependencies": {
    "@types/prettier": "^2.1.5",
    "commander": "^6.2.1",
    "cross-fetch": "^3.0.6",
    "debug": "^4.3.1",
    "glob": "^7.1.6",
    "https-proxy-agent": "^5.0.0",
    "js-yaml": "^3.14.1",
    "mkdirp": "^1.0.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@dtsgenerator/do-nothing": "^2.2.2",
    "@dtsgenerator/replace-namespace": "^1.3.2",
    "@dtsgenerator/single-quote": "^1.4.2",
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^3.12.5",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
